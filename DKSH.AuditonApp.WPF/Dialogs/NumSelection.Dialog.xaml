<Window x:Class="DKSH.AuditionApp.Application.Dialogs.NumSelectionDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DKSH.AuditionApp.Application.Dialogs"
     Title="Specify data to send" Height="100" Width="250" ResizeMode="NoResize">

    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
        <ComboBox Margin="10,8" ItemsSource="{Binding NumericItems, Mode=OneTime}" SelectedItem="{Binding SelectedNumericItem, Mode=TwoWay}" Width="60" />
        <Button Margin="10,8" IsDefault="True" Content="Send" Width="60"  />
    </StackPanel>
</Window>
